{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debugger",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/compiler",
      "args": [
        "${workspaceFolder}/aaa.sy",
        "-S",
        "-o",
        "./aaa.txt"
      ],
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "preLaunchTask": "build",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}